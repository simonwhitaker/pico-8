pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
-- rocket shooter
-- by s1mn

-- variables
tick=0
ship_sprite=1
x=64
y=100
speed=1
shots={}

-- constants
xmin=0
xmax=120
ymin=80
ymax=120
shot_speed=2

function fire(_x, _y)
  -- add x, y to shots, first
  -- tweaking to account for
  -- offset from x, y of ship
  -- sprite to x, y of nose of
  -- ship
  add(shots, {_x+3,_y-1})
end

function _update()
  tick+=1
  if tick>2 then
    tick=0
    ship_sprite+=1
    if ship_sprite>4 then ship_sprite=1 end
  end

  -- left
  if btn(0) then
    x-=speed
    if x<xmin then x=xmin end
  end

  -- right
  if btn(1) then
    x+=speed
    if x>xmax then x=xmax end
  end

  -- up
  if btn(2) then
    y-=speed
    if y<ymin then y = ymin end
  end

  -- down
  if btn(3) then
    y+=speed
    if y>ymax then y = ymax end
  end

  -- fire
  if btnp(4) then
    fire(x, y)
  end
  
  -- move existing shots
  for shot in all(shots) do
    shot[2]-=shot_speed
    if shot[2]<1 then
      del(shots,shot)
    end
  end
end


function _draw()
  cls()
  spr(ship_sprite,x,y)
  for shot in all(shots) do
    _x=shot[1]
    _y=shot[2]
    pset(_x,_y,8)
  end
end

